<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="CreateGroupController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label fx:id="title" layoutX="90" layoutY="20" text="Create New Group"/>
        <Label fx:id="name" layoutX="90" layoutY="60" text="Group Name:"/>
        <TextField fx:id="name_field" layoutX="170" layoutY="55"/>
        <CheckBox fx:id="join_group" text="Join new group" layoutX="170" layoutY="100"/>
        <Button text="Create group" layoutX="100" layoutY="150" onAction="#handleCreate"/>
        <Button text="Cancel" layoutX="100" layoutY="200" onAction="#handleBack"/>
    </children>

</AnchorPane>
