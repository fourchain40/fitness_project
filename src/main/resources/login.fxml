<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="LoginController">
    <children>
        <TextField fx:id="usernameField" layoutX="100" layoutY="80" promptText="Username"/>
        <PasswordField fx:id="passwordField" layoutX="100" layoutY="120" promptText="Password"/>
        <Button text="Login" layoutX="100" layoutY="160" onAction="#handleLogin"/>
        <Label fx:id="statusLabel" layoutX="100" layoutY="200"/>
    </children>
</AnchorPane>
